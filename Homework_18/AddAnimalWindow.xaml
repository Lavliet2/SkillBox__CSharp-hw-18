<Window x:Class="Homework_18.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить животное" Height="200" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Тип:"/>
        <ComboBox x:Name="habitatComboBox" Grid.Row="0" Margin="0,26,0,4" SelectedIndex="0" />
        <!--<TextBox x:Name="typeTextBox" Grid.Row="0" Margin="0,20,0,10"/>-->

        <Label Content="Место обитания:" Grid.Row="1"/>
        <TextBox x:Name="habitatTextBox" Grid.Row="2" Margin="0,6,0,24" />

        <Button Content="Добавить" Grid.Row="2" Click="AddButton_Click" Margin="0,29,0,-9"/>
    </Grid>
</Window>